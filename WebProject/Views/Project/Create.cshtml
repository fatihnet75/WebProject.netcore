@{
    ViewData["Title"] = "Yeni Proje Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model WebProject.Models.Project

<h2>Yeni Proje Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProjeIsmi" class="control-label"></label>
        <input asp-for="ProjeIsmi" class="form-control" />
        <span asp-validation-for="ProjeIsmi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjeHakkında" class="control-label"></label>
        <input asp-for="ProjeHakkında" class="form-control" />
        <span asp-validation-for="ProjeHakkında" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResimUrl" class="control-label"></label>
        <input asp-for="ResimUrl" class="form-control" />
        <span asp-validation-for="ResimUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjeNe" class="control-label"></label>
        <input asp-for="ProjeNe" class="form-control" />
        <span asp-validation-for="ProjeNe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

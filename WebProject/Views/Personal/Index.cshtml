@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Dictionary<WebProject.Models.Person, List<WebProject.Models.Project>>

<br>
<br>
<br>
<br>
<br>

<div id="person_list" class="container">

    @if (Model != null)
    {
        // Loop through each person-project pair in the Model (Dictionary)
        @foreach (var personProjectsPair in Model)
        {
            var person = personProjectsPair.Key;
            var projects = personProjectsPair.Value;

            <div class="row person_item">

                <div class="col-md-4 person-info">
                    <li>
                        @if (!string.IsNullOrEmpty(person.ResimUrl))
                        {
                            <img src="@person.ResimUrl" alt="@person.AdSoyad resim" class="person-image">
                        }
                    </li>
                    <h2>@person.AdSoyad</h2>
                    <ul>
                        <li><h5>E - posta:</h5> @person.Eposta</li>
                        <li><h5>Telefon Numarası:</h5> @person.TelefonNUmarası</li>
                        <li><h5>Doktora:</h5> @person.Doktora</li>
                        <li><h5>Yüksek Lisans:</h5> @person.YüksekLisans</li>
                        <li><h5>Lisans:</h5> @person.lisans</li>
                        <li><h5>Arastirma Alanları:</h5> @person.ArastirmaAlanı</li>
                        <li><h5>Hakkında:</h5> @person.Hakkında</li>
                    </ul>
                </div>

                <div class="col-md-10 project-list">
                    <h2>Projeleri</h2>
                    <ul>
                        @foreach (var project in projects)
                        {
                            <li>
                             
                                <div class="project-details">
                                    @if (!string.IsNullOrEmpty(project.ResimUrl))
                                    {
                                        <img src="@project.ResimUrl" alt="@project.ProjeIsmi resim" class="project-image">
                                    }
                                    <p><h5>Proje Adı: </h5>@project.ProjeIsmi</p>
                                    <p><h5>Proje Açıklaması:</h5> @project.ProjeHakkında</p>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        }
    }
    else
    {
        <p>Kişi veya proje bulunamadı.</p>
    }
</div>


<style>
    /* Add your desired styles here */
    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

    .person-item {
        display: flex;
        margin-bottom: 20px;
    }

    .person-info, .project-list {
        flex: 1;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .person-image {
        width: 100%;
        max-width: 200px;
        height: auto;
    }

    
  

        
</style>
